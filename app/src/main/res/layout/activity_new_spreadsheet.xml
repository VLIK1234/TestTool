<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="amtt.epam.com.amtt.ui.activities.NewSpreadsheetActivity">

    <amtt.epam.com.amtt.ui.views.TextInput
        android:id="@+id/ti_spreadsheet_key"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/label_add_spreadsheet_key"
        android:inputType="text" />

    <Button
        android:id="@+id/btn_check_spreadsheet_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ti_spreadsheet_key"
        android:text="Check key"/>

    <Button
        android:id="@+id/btn_add_spreadsheet_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ti_spreadsheet_key"
        android:layout_alignParentRight="true"
        android:enabled="false"
        android:text="@string/label_add_spreadsheet_key"/>
</RelativeLayout>
