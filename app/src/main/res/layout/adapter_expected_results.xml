<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/abc_control_padding_material"
    android:paddingLeft="@dimen/abc_dialog_list_padding_vertical_material"
    android:paddingRight="@dimen/abc_dialog_list_padding_vertical_material"
    android:paddingTop="@dimen/abc_control_padding_material"
    android:duplicateParentState="false">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardCornerRadius="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/result_card"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:duplicateParentState="true"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="@dimen/abc_action_bar_icon_vertical_padding_material"
                android:layout_marginRight="@dimen/abc_action_bar_icon_vertical_padding_material"
                android:layout_marginTop="24dp">

                <TextView
                    android:id="@+id/tv_testcase_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:textSize="@dimen/abc_text_size_subhead_material"/>

                <TextView
                    android:id="@+id/tv_priority"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/tv_testcase_name"
                    android:layout_marginTop="@dimen/abc_button_padding_horizontal_material"
                    android:textSize="@dimen/abc_text_size_caption_material"/>

                <TextView
                    android:id="@+id/tv_steps_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_priority"
                    android:layout_marginTop="@dimen/abc_action_bar_icon_vertical_padding_material"
                    android:text="@string/label_steps"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>

                <TextView
                    android:id="@+id/tv_steps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_steps_label"
                    android:layout_marginTop="@dimen/abc_button_padding_horizontal_material"
                    android:textSize="@dimen/abc_text_size_body_1_material"/>
            </RelativeLayout>

            <ImageButton
                android:id="@+id/btn_bug"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/result_card"
                android:layout_margin="8dp"
                android:background="@drawable/background_main_button"
                android:contentDescription="@null"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>