<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <!-- *******PROJECTS BEGIN***************************************************-->
        <LinearLayout
            android:layout_height="72dp"
            android:layout_width="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_project_name"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:text="@string/label_project"
                android:textSize="@dimen/material_caption_font_size" />
            <Spinner
                style="@style/Material.Widget.Spinner"
                android:id="@+id/spin_projects_name"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:paddingTop="4dp"/>
            <ImageView
                android:layout_height="1dip"
                android:layout_width="fill_parent"
                android:background="@color/accent"
                android:paddingBottom="@dimen/material_vertical_size_divider"
                android:contentDescription="@string/label_divider" />
            <TextView
                android:id="@+id/tv_error_project_name"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:paddingTop="@dimen/material_vertical_size_divider"
                android:text="@string/label_project"
                android:textSize="@dimen/material_caption_font_size"
                android:visibility="gone"/>
        </LinearLayout>
        <!-- *******PROJECTS END***************************************************-->

        <!-- *******ISSUE TYPES BEGIN**********************************************-->
        <TextView
            android:id="@+id/tv_project_issue_name"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:text="@string/label_issue_type"
            android:textSize="@dimen/material_caption_font_size"/>
        <Spinner
            android:id="@+id/spin_issue_name"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:hint="@string/label_issue_type"
            android:paddingTop="@dimen/material_vertical_size_divider"
            android:paddingBottom="7dp"/>
        <ImageView
            android:layout_height="1dip"
            android:layout_width="fill_parent"
            android:background="@color/accent"
            android:paddingBottom="@dimen/material_vertical_size_divider"/>
        <TextView
            android:id="@+id/tv_error_issue_name"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingTop="@dimen/material_vertical_size_divider"
            android:text="@string/label_issue_type"
            android:textSize="@dimen/material_caption_font_size"
            android:visibility="gone"/>
        <!-- *******ISSUE TYPES END**********************************************-->

        <!-- *******SUMMARY BEGIN*************************************************-->
        <amtt.epam.com.amtt.view.EditText
            style="@style/Material.Widget.EditText"
            android:id="@+id/et_summary"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:textColor="@color/primary_text"
            android:inputType="text"
            android:hint="@string/label_summary"
            app:et_inputId="@+id/summary_error"
            app:et_dividerErrorColor="#FFFF0000"
            app:et_helper="Enter summary"
            app:et_labelTextColor="@drawable/color_label"
            app:et_supportMode="helperWithError"
            app:et_supportTextErrorColor="#FFFF0000"/>
        <!-- *******SUMMARY END*************************************************-->

        <!-- *******PRIORITY BEGIN*************************************************-->
        <TextView
            android:id="@+id/tv_priority"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:text="@string/label_priority"
            android:textSize="@dimen/material_caption_font_size"/>
        <Spinner
            android:id="@+id/spin_priority"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:hint="@string/label_priority"
            android:paddingTop="@dimen/material_vertical_size_divider"
            android:paddingBottom="7dp"/>
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@color/accent"
            android:paddingTop="@dimen/material_vertical_size_divider"/>
        <TextView
            android:id="@+id/tv_error_priority"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@string/label_priority"
            android:textSize="@dimen/material_caption_font_size"
            android:visibility="gone"/>
        <!-- *******PRIORITY END*************************************************-->

        <!-- *******AFFECTS VERSIONS BEGIN****************************************-->
        <TextView
            android:id="@+id/tv_affects_versions"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:text="@string/label_affects_versions"
            android:textSize="@dimen/material_caption_font_size"/>
        <Spinner
            android:id="@+id/spin_affects_versions"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:hint="@string/label_affects_versions"
            android:paddingTop="@dimen/material_vertical_size_divider"
            android:paddingBottom="7dp"/>
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@color/accent"
            android:paddingTop="@dimen/material_vertical_size_divider"/>
        <TextView
            android:id="@+id/tv_error_affects_versions"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@string/label_affects_versions"
            android:textSize="@dimen/material_caption_font_size"
            android:visibility="gone"/>
        <!-- *******AFFECTS VERSIONS END****************************************-->

        <!-- *******ENVIRONMENT BEGIN****************************************-->
        <amtt.epam.com.amtt.view.EditText
            style="@style/Material.Widget.EditText"
            android:id="@+id/et_environment"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:textColor="@color/primary_text"
            android:inputType="textMultiLine"
            android:hint="@string/label_environment"
            app:et_inputId="@+id/summary_error"
            app:et_dividerErrorColor="#FFFF0000"
            app:et_helper="Enter environment"
            app:et_labelTextColor="@drawable/color_label"
            app:et_supportMode="helperWithError"
            app:et_supportTextErrorColor="#FFFF0000"/>
        <!-- *******ENVIRONMENT END****************************************-->

        <!-- *******DESCRIPTION BEGIN****************************************-->
        <amtt.epam.com.amtt.view.EditText
            style="@style/Material.Widget.EditText"
            android:id="@+id/et_description"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:textColor="@color/primary_text"
            android:inputType="textMultiLine"
            android:hint="@string/label_description"
            app:et_inputId="@+id/description_error"
            app:et_dividerErrorColor="#FFFF0000"
            app:et_helper="Enter description"
            app:et_labelTextColor="@drawable/color_label"
            app:et_supportMode="helperWithError"
            app:et_supportTextErrorColor="#FFFF0000"/>
        <!-- *******DESCRIPTION END****************************************-->

        <!-- *******TESTER BEGIN****************************************-->
        <TextView
            android:id="@+id/tv_tester"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:text="@string/label_tester"
            android:textSize="@dimen/material_caption_font_size"/>
        <Spinner
            android:id="@+id/spin_testers"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:hint="@string/label_tester"
            android:paddingTop="@dimen/material_vertical_size_divider"
            android:paddingBottom="7dp"/>
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@color/accent"
            android:paddingTop="@dimen/material_vertical_size_divider"/>
        <TextView
            android:id="@+id/tv_error_tester"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@string/label_tester"
            android:textSize="@dimen/material_caption_font_size"
            android:visibility="gone"/>
        <!-- *******TESTER END****************************************-->

        <ProgressBar
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/progress"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_create"
            android:layout_height="@dimen/material_vertical_button_height_size"
            android:layout_width="wrap_content"
            android:enabled="false"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/material_vertical_button_padding_top"
            android:minWidth="@dimen/material_vertical_button_min_width_size"
            android:text="@string/label_create"
            android:textSize="@dimen/material_button_font_size"/>
     </LinearLayout>
</ScrollView>

