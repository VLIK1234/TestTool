<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_deep_teal_200">

    <Button
        android:id="@+id/login_button"
        android:text="@string/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"/>

    <Button
        android:id="@+id/step_button"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="@string/step_button"
        android:layout_below="@+id/show_steps_button"/>

    <Button
        android:id="@+id/clear_db_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/clear_db_button"
        android:layout_below="@+id/step_button"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_issue"
        android:id="@+id/issue_act_button"
        android:layout_below="@id/login_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="onIssueClick"/>

    <Button
        android:id="@+id/show_steps_button"
        android:text="@string/show_steps_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>

    <Button
        android:id="@+id/crash_button"
        android:text="@string/crash_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/clear_db_button"/>



</RelativeLayout>
