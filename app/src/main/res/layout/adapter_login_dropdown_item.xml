<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/abc_button_padding_horizontal_material"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@+id/tv_avatar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="centerCrop"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/material_font_size_subhead"
        android:layout_marginLeft="@dimen/main_button_size"
        android:layout_marginStart="@dimen/main_button_size"/>

</RelativeLayout>
