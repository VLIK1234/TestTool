<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    tools:context=".ui.activities.DetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"

        android:padding="@dimen/abc_action_bar_icon_vertical_padding_material"
        android:scrollbarStyle="outsideInset">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_testcase_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="@dimen/abc_dialog_list_padding_vertical_material"
                android:text="@string/label_name_activity"
                android:textSize="@dimen/abc_text_size_subhead_material"/>

            <TextView
                android:id="@+id/tv_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_testcase_name"
                android:layout_marginTop="@dimen/abc_button_padding_horizontal_material"
                android:textSize="@dimen/abc_text_size_caption_material"/>

            <TextView
                android:id="@+id/tv_priority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tv_testcase_name"
                android:layout_marginTop="@dimen/abc_button_padding_horizontal_material"
                android:textSize="@dimen/abc_text_size_caption_material"/>

            <TextView
                android:id="@+id/tv_steps_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_label"
                android:layout_marginTop="@dimen/abc_action_bar_icon_vertical_padding_material"
                android:text="Steps"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>

            <TextView
                android:id="@+id/tv_steps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_steps_label"
                android:layout_marginTop="@dimen/abc_button_padding_horizontal_material"
                android:textSize="@dimen/abc_text_size_body_1_material"/>

            <View
                android:id="@+id/divider"
                style="@style/Divider"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/tv_steps"
                android:layout_marginTop="@dimen/abc_button_padding_horizontal_material"/>

            <TextView
                android:id="@+id/tv_description_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider"
                android:layout_marginTop="@dimen/abc_action_bar_icon_vertical_padding_material"
                android:text="Description"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_description_label"
                android:layout_marginTop="@dimen/abc_button_padding_horizontal_material"
                android:textSize="@dimen/abc_text_size_body_1_material"/>

            <TextView
                android:id="@+id/tv_expected_results_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_description"
                android:layout_marginTop="@dimen/abc_action_bar_icon_vertical_padding_material"
                android:text="Expected results"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>

            <TextView
                android:id="@+id/tv_expected_results"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_expected_results_label"
                android:layout_marginTop="@dimen/abc_button_padding_horizontal_material"
                android:textSize="@dimen/abc_text_size_body_1_material"/>
        </RelativeLayout>
    </ScrollView>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btn_bug"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp"
        android:layout_gravity="bottom|end"
        android:contentDescription="@null"
        android:src="@drawable/button_main"
        app:backgroundTint="@color/primary"
        app:elevation="4dp"
        app:pressedTranslationZ="12dp"/>
</RelativeLayout>