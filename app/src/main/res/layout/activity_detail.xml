<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/margin_activity_detail"
    android:layout_marginBottom="@dimen/margin_activity_detail"
    android:clickable="true"
    tools:context=".ui.activities.DetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_activity_detail"
            android:layout_marginLeft="@dimen/margin_activity_detail"
            android:layout_marginEnd="@dimen/margin_activity_detail"
            android:layout_marginRight="@dimen/margin_activity_detail"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_testcase_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="@dimen/abc_dialog_list_padding_vertical_material"
                android:textSize="@dimen/abc_text_size_subhead_material"/>

            <TextView
                android:id="@+id/tv_priority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/abc_button_padding_horizontal_material"
                android:textSize="@dimen/abc_text_size_caption_material"/>

            <TextView
                android:id="@+id/tv_steps_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/abc_action_bar_icon_vertical_padding_material"
                android:text="@string/label_steps"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>

            <TextView
                android:id="@+id/tv_steps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/abc_button_padding_horizontal_material"
                android:textSize="@dimen/abc_text_size_body_1_material"/>

            <View
                android:id="@+id/divider"
                style="@style/Divider"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/abc_button_padding_horizontal_material"/>

            <TextView
                android:id="@+id/tv_expected_results_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/abc_action_bar_icon_vertical_padding_material"
                android:text="@string/label_expected_result"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>

            <TextView
                android:id="@+id/tv_expected_results"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/abc_button_padding_horizontal_material"
                android:textSize="@dimen/abc_text_size_body_1_material"/>
        </LinearLayout>
    </ScrollView>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btn_bug"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:contentDescription="@null"
        android:src="@drawable/button_main"
        app:backgroundTint="@color/primary"
        app:elevation="4dp"
        app:pressedTranslationZ="8dp"/>
</RelativeLayout>