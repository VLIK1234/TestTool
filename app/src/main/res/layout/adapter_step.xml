<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="@dimen/abc_action_bar_icon_vertical_padding_material"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="end"
        android:layout_margin="8dp"
        android:background="?android:selectableItemBackground"
        android:gravity="center"
        android:src="@android:drawable/ic_delete" />


    <TextView
        android:id="@+id/step_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="@string/label_step"
        android:textSize="@dimen/abc_text_size_headline_material" />

    <ImageView
        android:id="@+id/screenshot_image"
        android:contentDescription="@string/screenshot_image_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/activity_info_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/abc_action_bar_icon_vertical_padding_material" />


</LinearLayout>
