<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="amtt.epam.com.amtt.app.UserInfoActivity">

    <amtt.epam.com.amtt.view.TextView
        android:id="@+id/user_display_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/material_font_size_headline"
        android:textColor="@color/abc_primary_text_material_light"
        android:text="@string/label_display_name"/>

    <amtt.epam.com.amtt.view.TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/material_font_size_subhead"
        android:textColor="@color/abc_primary_text_material_light"
        android:text="@string/label_user_name" />

    <amtt.epam.com.amtt.view.TextView
        android:id="@+id/user_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/material_font_size_subhead"
        android:textColor="@color/abc_primary_text_material_light"
        android:text="@string/label_email" />

    <amtt.epam.com.amtt.view.TextView
        android:id="@+id/user_time_zone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/material_font_size_subhead"
        android:textColor="@color/abc_primary_text_material_light"
        android:text="@string/label_time_zone"/>

    <amtt.epam.com.amtt.view.TextView
        android:id="@+id/user_locale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/material_font_size_subhead"
        android:textColor="@color/abc_primary_text_material_light"
        android:text="@string/label_locale"/>

    <ProgressBar
        android:id="@android:id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible" />

</LinearLayout>
