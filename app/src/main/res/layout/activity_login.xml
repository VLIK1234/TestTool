<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="amtt.epam.com.amtt.app.LoginActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- *******URL BEGIN***************************************************-->
    <amtt.epam.com.amtt.view.EditText
        style="@style/Material.Widget.EditText"
        android:id="@+id/jira_url"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
        android:textColor="@color/primary_text"
        android:inputType="textUri"
        android:hint="@string/label_url"
        app:et_inputId="@+id/jira_url_error"
        app:et_dividerErrorColor="#FFFF0000"
        app:et_helper="Enter url"
        app:et_labelTextColor="@drawable/color_label"
        app:et_supportMode="helperWithError"
        app:et_supportTextErrorColor="#FFFF0000"/>
    <!-- *******URL END***********************************************************-->

    <!-- *******USER NAME BEGIN***************************************************-->
    <amtt.epam.com.amtt.view.EditText
        style="@style/Material.Widget.EditText"
        android:id="@+id/user_name"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
        android:textColor="@color/primary_text"
        android:inputType="text"
        android:hint="@string/label_user_name"
        app:et_inputId="@+id/user_name_error"
        app:et_dividerErrorColor="#FFFF0000"
        app:et_helper="Enter username"
        app:et_labelTextColor="@drawable/color_label"
        app:et_supportMode="helperWithError"
        app:et_supportTextErrorColor="#FFFF0000"/>
    <!-- *******USER NAME END***************************************************-->

    <!-- *******PASSWORD BEGIN***************************************************-->
    <amtt.epam.com.amtt.view.EditText
        style="@style/Material.Widget.EditText"
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/primary_text"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
        android:inputType="textPassword"
        android:hint="@string/label_password"
        app:et_inputId="@+id/password_error"
        app:et_labelTextColor="@drawable/color_label"
        app:et_supportMode="helperWithError"
        app:et_supportTextErrorColor="#FFFF0000"
        app:et_helper="Enter password"
        app:et_dividerErrorColor="#FFFF0000"/>
    <!-- *******PASSWORD END***************************************************-->

    <Button
        android:id="@+id/login_button"
        android:layout_height="@dimen/material_vertical_button_height_size"
        android:layout_width="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/material_vertical_button_padding_top"
        android:minWidth="@dimen/material_vertical_button_min_width_size"
        android:text="@string/label_login"
        android:textSize="@dimen/material_button_font_size"/>

    <ProgressBar
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/progress"
        android:visibility="gone"
        android:layout_gravity="center"/>

</LinearLayout>
