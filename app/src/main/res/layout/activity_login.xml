<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_with_text_input"
    android:paddingRight="@dimen/activity_with_text_input"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="amtt.epam.com.amtt.app.LoginActivity">

    <amtt.epam.com.amtt.ui.views.TextInput
        android:id="@+id/username_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/label_user_name"
        android:inputType="text" />

    <amtt.epam.com.amtt.ui.views.TextInput
        android:id="@+id/url_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username_input"
        android:hint="@string/label_url"
        android:inputType="textUri"
        android:text="@string/url_prefix" />

    <amtt.epam.com.amtt.ui.views.TextInput
        android:id="@+id/password_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/url_input"
        android:hint="@string/label_password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/material_vertical_button_height_size"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/password_input"
        android:layout_marginEnd="@dimen/activity_with_text_input"
        android:layout_marginRight="@dimen/activity_with_text_input"
        android:text="@string/label_login"
        android:textSize="@dimen/abc_text_size_button_material" />

    <ProgressBar
        android:id="@android:id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</RelativeLayout>
