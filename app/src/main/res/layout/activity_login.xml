<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="amtt.epam.com.amtt.fragment.LoginFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- *******USER NAME BEGIN***************************************************-->
    <amtt.epam.com.amtt.view.EditText
        style="@style/Material.Widget.EditText"
        android:id="@+id/user_name"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/material_vertical_size_divider"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
        android:textColor="@color/primary_text"
        android:inputType="textUri"
        android:hint="@string/label_user_name"
        app:et_inputId="@+id/jira_url_error"
        app:et_dividerErrorColor="#FFFF0000"
        app:et_labelTextColor="@drawable/color_label"
        app:et_supportMode="error"
        app:et_supportTextErrorColor="#FFFF0000"
        android:paddingTop="8dp"/>
    <!-- *******USER NAME END***************************************************-->

    <!-- *******URL BEGIN***************************************************-->
    <amtt.epam.com.amtt.view.EditText
        style="@style/Material.Widget.EditText"
        android:id="@+id/jira_url"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/material_vertical_size_divider"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
        android:textColor="@color/primary_text"
        android:inputType="textUri"
        android:hint="@string/label_url"
        app:et_inputId="@+id/jira_url_error"
        app:et_dividerErrorColor="#FFFF0000"
        app:et_labelTextColor="@drawable/color_label"
        app:et_supportMode="error"
        app:et_supportTextErrorColor="#FFFF0000"
        android:layout_below="@+id/user_name"/>
    <!-- *******URL END***********************************************************-->

    <!-- *******PASSWORD BEGIN***************************************************-->
    <amtt.epam.com.amtt.view.EditText
        style="@style/Material.Widget.EditText"
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/material_vertical_size_divider"
        android:textColor="@color/primary_text"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
        android:inputType="textPassword"
        android:hint="@string/label_password"
        app:et_inputId="@+id/password_error"
        app:et_labelTextColor="@drawable/color_label"
        app:et_supportMode="error"
        app:et_supportTextErrorColor="#FFFF0000"
        app:et_dividerErrorColor="#FFFF0000"
        android:layout_below="@+id/jira_url"/>
    <!-- *******PASSWORD END***************************************************-->

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_epam_employee_sign"
        android:id="@+id/epam_jira_checkbox"
        android:layout_below="@+id/password"/>

    <Button
        android:id="@+id/login_button"
        android:layout_height="@dimen/material_vertical_button_height_size"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/material_vertical_button_padding_top"
        android:minWidth="@dimen/material_vertical_button_min_width_size"
        android:text="@string/label_login"
        android:textSize="@dimen/material_font_size_button"
        android:layout_below="@id/epam_jira_checkbox"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <ProgressBar
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@android:id/progress"
        android:visibility="gone"
        android:layout_centerInParent="true"/>

</RelativeLayout>
