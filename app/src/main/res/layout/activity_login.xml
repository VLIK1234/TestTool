<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_horizontal_margin"
    tools:context="amtt.epam.com.amtt.fragment.LoginFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/username_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/label_user_name"
            android:inputType="text"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/url_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username_input_layout">

        <EditText
            android:id="@+id/et_jira_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/label_url"
            android:inputType="textUri"
            android:text="@string/url_prefix"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/password_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/url_input_layout">

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/label_password"
            android:inputType="textPassword"/>

    </android.support.design.widget.TextInputLayout>

      <Button
        android:id="@+id/btn_login"
        android:layout_height="@dimen/material_vertical_button_height_size"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/material_vertical_button_padding_top"
        android:minWidth="@dimen/material_vertical_button_min_width_size"
        android:text="@string/label_login"
        android:textSize="@dimen/abc_text_size_button_material"
        android:layout_below="@id/password_input_layout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <ProgressBar
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@android:id/progress"
        android:visibility="gone"
        android:layout_centerInParent="true"/>

</RelativeLayout>
