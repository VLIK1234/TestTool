<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_horizontal_margin"
    tools:context=".app.LoginActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <amtt.epam.com.amtt.view.EditText
        android:id="@+id/et_username"
        style="@style/Material.Widget.EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/material_vertical_size_divider"
        android:hint="@string/label_user_name"
        android:inputType="text"/>

    <amtt.epam.com.amtt.view.EditText
        android:id="@+id/et_jira_url"
        style="@style/Material.Widget.EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/material_vertical_size_divider"
        android:hint="@string/label_url"
        android:inputType="textUri"
        android:layout_below="@+id/et_username"/>

    <amtt.epam.com.amtt.view.EditText
        android:id="@+id/et_password"
        style="@style/Material.Widget.EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/material_vertical_size_divider"
        android:hint="@string/label_password"
        android:inputType="textPassword"
        android:layout_below="@+id/et_jira_url" />

      <Button
        android:id="@+id/btn_login"
        android:layout_height="@dimen/material_vertical_button_height_size"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/material_vertical_button_padding_top"
        android:minWidth="@dimen/material_vertical_button_min_width_size"
        android:text="@string/label_login"
        android:textSize="@dimen/abc_text_size_button_material"
        android:layout_below="@id/et_password"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <ProgressBar
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@android:id/progress"
        android:visibility="gone"
        android:layout_centerInParent="true"/>

</RelativeLayout>
