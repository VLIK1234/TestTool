<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/top_button_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/plus_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:src="@drawable/ic_top_button" />

    <LinearLayout
        android:id="@+id/buttons_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_auth"
            android:layout_width="@dimen/button_small_size"
            android:layout_height="@dimen/button_small_size"
            android:background="@drawable/button_login" />

        <Button
            android:id="@+id/button_user_info"
            android:layout_width="@dimen/button_small_size"
            android:layout_height="@dimen/button_small_size"
            android:background="@drawable/button_auth"/>

        <Button
            android:id="@+id/button_add_step"
            android:layout_width="@dimen/button_small_size"
            android:layout_height="@dimen/button_small_size"
            android:background="@drawable/button_add_step"/>

        <Button
            android:id="@+id/button_show_step"
            android:layout_width="@dimen/button_small_size"
            android:layout_height="@dimen/button_small_size"
            android:background="@drawable/button_show_step" />

        <Button
            android:id="@+id/button_bug_rep"
            android:layout_width="@dimen/button_small_size"
            android:layout_height="@dimen/button_small_size"
            android:background="@drawable/button_bug_rep" />
    </LinearLayout>
</RelativeLayout>
