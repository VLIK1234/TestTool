<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/top_button_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/main_button"
        android:layout_width="@dimen/main_button_size"
        android:layout_height="@dimen/main_button_size"
        android:clickable="false"
        android:background="@drawable/background_main_button"/>

    <LinearLayout
        android:id="@+id/buttons_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:duplicateParentState="false">

        <LinearLayout
            android:id="@+id/layout_auth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/margin_buttons_bar"
            android:layout_marginLeft="@dimen/margin_buttons_bar">

            <Button
                android:id="@+id/button_auth"
                android:layout_width="@dimen/button_small_size"
                android:layout_height="@dimen/button_small_size"
                android:background="@drawable/background_circle"
                android:text="@string/login"
                android:textColor="@color/green"
                android:textSize="@dimen/button_text_size"
                android:enabled="false"
                android:clickable="false"/>

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="@dimen/card_elevation"
                card_view:cardCornerRadius="@dimen/card_corner_radius">

                <TextView
                    android:id="@+id/text_auth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/button_authorization"
                    android:textColor="@color/black"/>
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_user_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/margin_buttons_bar"
            android:layout_marginLeft="@dimen/margin_buttons_bar"
            android:duplicateParentState="false">

            <Button
                android:id="@+id/button_user_info"
                android:layout_width="@dimen/button_small_size"
                android:layout_height="@dimen/button_small_size"
                android:background="@drawable/background_user_info"
                android:enabled="false"
                android:clickable="false"/>


            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="@dimen/card_elevation"
                card_view:cardCornerRadius="@dimen/card_corner_radius">

                <TextView
                    android:id="@+id/text_user_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/button_user_info"
                    android:textColor="@color/black"/>
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_add_step"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="@dimen/margin_buttons_bar"
            android:duplicateParentState="false">

            <Button
                android:id="@+id/button_add_step"
                android:layout_width="@dimen/button_small_size"
                android:layout_height="@dimen/button_small_size"
                android:background="@drawable/background_add_step"
                android:clickable="false"/>

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="@dimen/card_elevation"
                card_view:cardCornerRadius="@dimen/card_corner_radius">

                <TextView
                    android:id="@+id/text_add_step"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/button_add_step"
                    android:textColor="@color/black"/>
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_show_step"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/margin_buttons_bar"
            android:layout_marginLeft="@dimen/margin_buttons_bar"
            android:duplicateParentState="false">

            <Button
                android:id="@+id/button_show_step"
                android:layout_width="@dimen/button_small_size"
                android:layout_height="@dimen/button_small_size"
                android:background="@drawable/background_show_step"
                android:clickable="false"/>

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="@dimen/card_elevation"
                card_view:cardCornerRadius="@dimen/card_corner_radius">

                <TextView
                    android:id="@+id/text_show_step"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/button_show_step"
                    android:textColor="@color/black"/>
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_bug_rep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/margin_buttons_bar"
            android:layout_marginLeft="@dimen/margin_buttons_bar"
            android:duplicateParentState="false">

            <Button
                android:id="@+id/button_bug_rep"
                android:layout_width="@dimen/button_small_size"
                android:layout_height="@dimen/button_small_size"
                android:background="@drawable/background_bug_rep"
                android:enabled="false"
                android:clickable="false"/>

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="@dimen/card_elevation"
                card_view:cardCornerRadius="@dimen/card_corner_radius">

                <TextView
                    android:id="@+id/text_bug_rep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/button_bug_rep"
                    android:textColor="@color/black"/>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
