<?xml version="1.0"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_content_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="24dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingBottom="24dp"
        android:text="@string/dialog_exit"
        android:textColor="@color/secondary_text"
        android:textSize="@dimen/material_font_size_subhead"/>

    <Button
        android:id="@+id/btn_close_amtt"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dialog_button_height"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_content_dialog"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/label_close_app"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="@dimen/material_font_size_button"/>

    <Button
        android:id="@+id/btn_return"
        android:layout_height="@dimen/dialog_button_height"
        android:layout_width="wrap_content"
        android:layout_below="@+id/tv_content_dialog"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="8dp"
        android:layout_toLeftOf="@+id/btn_close_amtt"
        android:text="@string/label_return"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="@dimen/material_font_size_button"/>

</RelativeLayout>