<resources>

    <!-- Base application theme. -->
    <style name="Material" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:icon">@color/icons</item>
        <item name="android:divider">@color/divider</item>
    </style>

    <style name="MaterialTransparentActionBar" parent="Material">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="colorPrimary">@color/primaryTranslucent</item>
    </style>

    <style name="Material.Drawable"></style>

    <style name="Material.Widget"></style>

    <style name="Material.AutocompleteProgressView">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:dropDownItemStyle">@style/Material.DropDownItem</item>
        <item name="android:spinnerStyle">@style/Base.Widget.AppCompat.Spinner.Underlined.Custom
        </item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Medium</item>
        <item name="android:inputType">textAutoComplete</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="Material.DropDownItem">
        <item name="android:height">@dimen/material_menu_item_vertical_height</item>
        <item name="android:layout_height">@dimen/material_menu_item_vertical_height</item>
        <item name="android:paddingLeft">@dimen/material_menu_item_vertical_width</item>
        <item name="android:paddingRight">@dimen/material_menu_item_vertical_width</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Medium</item>
        <item name="android:baselineAlignBottom">true</item>
    </style>

    <style name="Material.TextViewLabel">
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="Material.TextViewSecondary">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Small</item>
    </style>

    <style name="Base.Widget.AppCompat.Spinner.Underlined.Custom">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Medium</item>
        <item name="android:spinnerItemStyle">@style/Material.SpinnerItem</item>
        <item name="android:duplicateParentState">true</item>
    </style>

    <style name="Material.RecyclerView">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_height">140dp</item>
        <item name="android:background">@drawable/dotted_border</item>
    </style>

    <style name="Material.SpinnerItem">
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Medium</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="Dialog" parent="Theme.AppCompat.Light.Dialog" />

    <style name="PaletteButtonFirst" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_width">@dimen/button_small_size</item>
        <item name="android:layout_height">@dimen/button_small_size</item>
    </style>

    <style name="PaletteButtonNext" parent="PaletteButtonFirst">
        <item name="android:layout_marginLeft">@dimen/navigation_padding_bottom</item>
    </style>

    <style name="Material.SpinnerProgress">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="Material.CreateIssueButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_marginRight">6dp</item>
    </style>

    <style name="UserInfoDescriptor">
        <item name="android:paddingLeft">@dimen/user_info_descriptor_padding</item>
        <item name="android:paddingRight">@dimen/abc_action_bar_icon_vertical_padding_material</item>
    </style>

    <style name="CreateIssueRelativeContainer">
        <item name="android:layout_marginLeft">@dimen/abc_button_padding_horizontal_material</item>
        <item name="android:layout_marginRight">@dimen/abc_button_padding_horizontal_material</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CreateIssueCheckBox">
        <item name="android:padding">@dimen/abc_button_padding_horizontal_material</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DialogActivity" parent="Material">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>
