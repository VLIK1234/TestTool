<resources>

    <!-- Base application theme. -->
    <style name="Material" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:icon">@color/icons</item>
        <item name="android:divider">@color/divider</item>
    </style>

    <style name="Material.Drawable"></style>

    <style name="Material.Widget"></style>

    <style name="Material.Widget.Spinner">
        <item name="android:textSize">@dimen/abc_text_size_subhead_material</item>
    </style>

    <style name="Material.Widget.EditText">
        <item name="et_labelEnable">true</item>
        <item name="et_labelPadding">0dp</item>
        <item name="et_labelTextAppearance">@style/TextAppearance.AppCompat.Caption</item>
        <item name="et_labelTextColor">@color/abc_secondary_text_material_dark</item>
        <item name="et_labelTextSize">@dimen/abc_text_size_caption_material</item>
        <item name="et_labelEllipsize">end</item>
        <item name="et_labelInAnim">@anim/abc_fade_in</item>
        <item name="et_labelOutAnim">@anim/abc_fade_out</item>
        <item name="et_dividerErrorColor">?attr/colorAccent</item>
        <item name="et_dividerAnimDuration">@android:integer/config_shortAnimTime</item>
        <item name="et_dividerHeight">1dp</item>
        <item name="et_dividerPadding">0dp</item>
        <item name="et_dividerCompoundPadding">true</item>
        <item name="et_supportTextAppearance">@style/TextAppearance.AppCompat.Caption</item>
        <item name="et_supportTextColor">@color/secondary_text</item>
        <item name="et_supportTextErrorColor">?attr/colorAccent</item>
        <item name="et_supportTextSize">8dp</item>
        <item name="et_supportEllipsize">end</item>
        <item name="et_autoCompleteMode">none</item>
        <item name="et_supportMode">4</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="Material.Widget.AutocompleteProgressView">
        <item name="android:dropDownItemStyle">@style/Material.Widget.DropDownItem</item>
        <item name="android:spinnerStyle">@style/Material.Widget.Spinner</item>
    </style>

    <style name="Material.Widget.DropDownItem">
        <item name="android:height">@dimen/material_menu_item_vertical_height</item>
        <item name="android:layout_height">@dimen/material_menu_item_vertical_height</item>
        <item name="android:paddingLeft">@dimen/material_menu_item_vertical_width</item>
        <item name="android:paddingRight">@dimen/material_menu_item_vertical_width</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:textSize">@dimen/abc_text_size_subhead_material</item>
        <item name="android:baselineAlignBottom">true</item>
    </style>

</resources>
