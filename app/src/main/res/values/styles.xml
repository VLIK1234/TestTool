<resources>

    <!-- Base application theme. -->
    <style name="Material" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:icon">@color/icons</item>
        <item name="android:divider">@color/divider</item>
    </style>

    <style name="Material.Drawable"></style>

    <style name="Material.Widget"></style>

    <style name="Material.Widget.EditText">
        <item name="et_labelEnable">true</item>
        <item name="et_labelPadding">0dp</item>
        <item name="et_labelTextAppearance">@style/Base.TextAppearance.AppCompat.Small</item>
        <item name="et_labelTextColor">@drawable/color_label</item>
        <item name="et_labelEllipsize">end</item>
        <item name="et_labelInAnim">@anim/abc_fade_in</item>
        <item name="et_labelOutAnim">@anim/abc_fade_out</item>
        <item name="et_dividerErrorColor">@color/et_divider_error</item>
        <item name="et_dividerAnimDuration">@android:integer/config_shortAnimTime</item>
        <item name="et_dividerHeight">1dp</item>
        <item name="et_dividerPadding">0dp</item>
        <item name="et_dividerCompoundPadding">true</item>
        <item name="et_supportTextAppearance">@style/Base.TextAppearance.AppCompat.Small</item>
        <item name="et_supportTextColor">@color/secondary_text</item>
        <item name="et_supportTextErrorColor">@color/et_divider_error</item>
        <item name="et_supportTextSize">8dp</item>
        <item name="et_supportEllipsize">end</item>
        <item name="et_autoCompleteMode">none</item>
        <item name="et_supportMode">error</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Medium</item>

    </style>

    <style name="Material.Widget.AutocompleteProgressView">
        <item name="android:dropDownItemStyle">@style/Material.Widget.DropDownItem</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Medium</item>
        <item name="android:inputType">textAutoComplete</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="Material.Widget.DropDownItem">
        <item name="android:height">@dimen/material_menu_item_vertical_height</item>
        <item name="android:layout_height">@dimen/material_menu_item_vertical_height</item>
        <item name="android:paddingLeft">@dimen/material_menu_item_vertical_width</item>
        <item name="android:paddingRight">@dimen/material_menu_item_vertical_width</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Medium</item>
        <item name="android:baselineAlignBottom">true</item>
    </style>

    <style name="Material.Widget.TextView">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">@dimen/abc_text_size_caption_material</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Small</item>
    </style>

    <style name="Base.Widget.AppCompat.Spinner.Underlined.Custom">
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:textSize">@dimen/abc_text_size_subhead_material</item>
    </style>

    <style name="Material.Widget.RecyclerView">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_height">140dp</item>
        <item name="android:background">@drawable/dotted_border</item>
        <item name="android:scrollbars">horizontal</item>
    </style>
</resources>
