<resources>

    <!-- Base application theme. -->
    <style name="Material" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:icon">@color/icons</item>
        <item name="android:divider">@color/divider</item>
    </style>

    <style name="Material.Drawable"></style>

    <style name="Material.Widget"></style>

    <style name="Material.Widget.AutocompleteProgressView">
        <item name="android:dropDownItemStyle">@style/Material.Widget.DropDownItem</item>
        <item name="android:spinnerStyle">@style/Base.Widget.AppCompat.Spinner.Underlined.Custom
        </item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Medium</item>
        <item name="android:inputType">textAutoComplete</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="Material.Widget.DropDownItem">
        <item name="android:height">@dimen/material_menu_item_vertical_height</item>
        <item name="android:layout_height">@dimen/material_menu_item_vertical_height</item>
        <item name="android:paddingLeft">@dimen/material_menu_item_vertical_width</item>
        <item name="android:paddingRight">@dimen/material_menu_item_vertical_width</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Medium</item>
        <item name="android:baselineAlignBottom">true</item>
    </style>

    <style name="Material.Widget.TextViewLabel">
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="Material.Widget.TextViewSecondary">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Small</item>
    </style>

    <style name="Base.Widget.AppCompat.Spinner.Underlined.Custom">
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Medium</item>
        <item name="android:spinnerItemStyle">@style/Material.Widget.SpinnerItem</item>
        <item name="android:duplicateParentState">true</item>
    </style>

    <style name="Material.Widget.RecyclerView">
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_height">140dp</item>
        <item name="android:background">@drawable/dotted_border</item>
        <item name="android:scrollbars">horizontal</item>
    </style>

    <style name="Material.Widget.SpinnerItem">
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Medium</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="Dialog" parent="Theme.AppCompat.Light.Dialog"/>

    <style name="PaintButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_width">@dimen/button_small_size</item>
        <item name="android:layout_height">@dimen/button_small_size</item>
        <item name="android:src">@drawable/background_paint_button</item>
    </style>

</resources>
