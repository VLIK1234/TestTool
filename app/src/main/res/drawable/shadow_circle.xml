<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval"
            android:dither="true">
            <gradient android:startColor="@color/dim_foreground_disabled_material_light"
                android:endColor="@android:color/transparent"
                android:gradientRadius="50"
                android:type="radial"/>
        </shape>
    </item>
    <item android:top="3dp" android:bottom="2dp" android:right="3dp">
        <shape android:shape="oval"
            android:dither="true">
            <gradient android:startColor="@color/dim_foreground_disabled_material_light"
                android:endColor="@android:color/transparent"
                android:gradientRadius="40"
                android:type="radial"/>
        </shape>
    </item>
    <item android:top="3dp" android:bottom="4dp" android:right="3dp">
        <shape android:shape="oval"
            android:dither="true">
            <gradient android:startColor="@color/dim_foreground_disabled_material_light"
                android:endColor="@android:color/transparent"
                android:gradientRadius="30"
                android:type="radial"/>
        </shape>
    </item>
</layer-list>