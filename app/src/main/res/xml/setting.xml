<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/title_activity_settings">
    <PreferenceCategory android:title="@string/preff_category_help_dialog">
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="@string/key_dialog_hide"
            android:summary="@string/dialog_label_checkbox"
            android:title="@string/title_preff_dialog_hide" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/preff_category_topbutton">
        <SwitchPreference
            android:defaultValue="true"
            android:key="@string/key_topbutton_show"
            android:title="@string/title_preff_topbutton_show" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/preff_category_test_project">
        <EditTextPreference
            android:defaultValue="com.example.ivan_bakach.testpermissionclient"
            android:key="@string/key_test_project"
            android:title="@string/title_preff_test_project" />
    </PreferenceCategory>
</PreferenceScreen>